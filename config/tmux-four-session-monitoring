# 左上: ctop
send-keys -t 0 'htop' C-m

# 右上: htop
split-window -h -t 0 -c '#{pane_current_path}' 'ctop'

# 左下: btop
split-window -v -t 0 -c '#{pane_current_path}' 'btop'

# 右下: lazygit
split-window -h -t 2 -c '#{pane_current_path}' 'lazygit'

# 全体を4分割に再調整
select-layout tiled

# 最初のペインに戻す
select-pane -t 0
