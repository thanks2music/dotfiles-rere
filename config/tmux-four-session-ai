# 左上: Claude
send-keys -t 0 'claude' C-m

# 左下: Codex
split-window -v -t 0 -c '#{pane_current_path}' 'codex'

# 右上: Blank
split-window -h -t 0 -c '#{pane_current_path}'

# 右下: Gemini
split-window -v -t 2 -c '#{pane_current_path}' 'gemini'


# レイアウト整形 (even-horizontalで横分割に調整)
# select-layout even-horizontal
# tiledで4分割にする
select-layout tiled
select-pane -t 0
